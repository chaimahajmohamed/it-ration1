{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}

    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    {% endblock %}
<div class="col-md-12">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title text-info">Créer Evènement</h3>
            <a class='btn btn-info btn-xs pull-right' href="{{ path('evenement_index') }}"><i class="glyphicon glyphicon-remove "></i></a>
        </div>
        <div class="box-body">
            {{ form_start(form,{'attr':{'novalidate':'novalidate'}})}}



            <!-- le champ nom-->
            {% set class='' %}
            {% if not form.nomEvenement.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
            <div class="col-md-6 form-group {{class}}">
            <label class="control-label" for="{{form.nomEvenement.vars.id}}">Nom</label>
            <input class="form-control" id="{{form.nomEvenement.vars.id}}" type="text" name="{{ form.nomEvenement.vars.full_name}}" value="{{ form.nomEvenement.vars.value}}" placeholder="Entrer le nom" />
            {% do form.nomEvenement.setRendered %}
            {% if not form.nomEvenement.vars.valid %}
                {% for error in form.nomEvenement.vars.errors %}
                    <span class="help-block">{{ error.message }}</span>
                {% endfor %}
            {% endif%}


        </div>
            <!-- le champ formateur -->
        <div class="col-md-6 form-group">
            {{ form_label(form.formateur,'Formateur')}}
            {{ form_widget(form.formateur,{'attr':{'class':'form-control'}}) }}

        </div>

            <!-- le champ date début -->
        <div class="col-md-6 form-group">
             {{ form_label(form.datedebut,'Date début')}}
             {{ form_widget(form.datedebut,{'attr':{'class':'form-control'}}) }}

        </div>
            <!-- le champ date fin -->
        <div class="col-md-6 form-group">
              {{ form_label(form.datefin,'Date début')}}
              {{ form_widget(form.datefin,{'attr':{'class':'form-control'}}) }}
        </div>
            <!-- le champ durée -->
            {% set class='' %}
            {% if not form.duree.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
        <div class="col-md-4 form-group {{ class }}">
              {{ form_label(form.duree,'Durée')}}
              {{ form_widget(form.duree,{'attr':{'class':'form-control'}}) }}
            {% do form.duree.setRendered %}
            {% if not form.duree.vars.valid %}
                {% for error in form.duree.vars.errors %}
                    <span class="help-block">{{ error.message }}</span>
                {% endfor %}
            {% endif%}
        </div>
            <!-- le champ prix -->
        <div class="col-md-4 form-group">
              {{ form_label(form.prix,'Prix')}}
              {{ form_widget(form.prix,{'attr':{'class':'form-control'}}) }}
        </div>
            <!-- le champ Image -->
            {% set class='' %}
            {% if not form.duree.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
        <div class="col-md-4 form-group {{ class }}">
                {{ form_label(form.file,'Image')}}
                {{ form_widget(form.file,{'attr':{'class':'form-control'}}) }}
            {% do form.file.setRendered %}
            {% if not form.file.vars.valid %}
                {% for error in form.file.vars.errors %}
                    <span class="help-block">{{ error.message }}</span>
                {% endfor %}
            {% endif%}
        </div>
            <!-- le champ Objectif -->
            {% set class='' %}
            {% if not form.objectif.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
        <div class="col-md-6 form-group {{ class }}">
                {{ form_label(form.objectif,'Objectif')}}
                {{ form_widget(form.objectif,{'attr':{'class':'form-control'}}) }}
            {% do form.objectif.setRendered %}
            {% if not form.objectif.vars.valid %}
                {% for error in form.objectif.vars.errors %}
                    <span class="help-block">{{ error.message }}</span>
                {% endfor %}
            {% endif%}
        </div>
            <!-- le champ Programme -->
            {% set class='' %}
            {% if not form.programme.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
        <div class="col-md-6 form-group {{ class }}">
                {{ form_label(form.programme,'Programme')}}
                {{ form_widget(form.programme,{'attr':{'class':'form-control'}}) }}
            {% do form.programme.setRendered %}
            {% if not form.programme.vars.valid %}
                {% for error in form.programme.vars.errors %}
                    <span class="help-block">{{ error.message }}</span>
                {% endfor %}
            {% endif%}
        </div>
        <div class="col-md-6 form-group">
            {{ form_label(form.informationplus,'Information')}}
            {{ form_widget(form.informationplus,{'attr':{'class':'form-control'}}) }}
        </div>

        </div>
        <div class="box-footer">
            <input class="btn btn-primary btn-md" type="submit" value="Créer" />
            <a  class='btn btn-warning btn-md' href="{{ path('evenement_index')  }}"> Annuler</a>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="box-body pad">
        <form>
            <textarea class="textarea" placeholder="Place some text here"
                      style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
        </form>
    </div>
</div>
<span class="clearfix">
{% endblock %}