{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css')}}">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css')}}">
        <!-- Ionicons -->
        <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css')}}">
        <!-- Theme style -->
        <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css')}}">
        <!-- AdminLTE Skins. Choose a skin from the css/skins
             folder instead of downloading all of them to reduce the load. -->
        <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css')}}">
    {% endblock %}

    <div class="box box-primary">
        <div class="box-body box-profile">
            <div class="btn-group-vertical pull-right">
                <a  class='btn btn-primary btn-sm text-center' href="{{  path('service_index') }}"><i class="glyphicon glyphicon-remove "></i></a><br>
                {{ form_start(delete_form) }}
                <button type="submit" value="Supprimer" class="btn btn-danger btn-sm pull-right"><i class="glyphicon glyphicon-trash"></i></button>
                {{ form_end(delete_form) }}
            </div>
            <img src="{{asset('images/')}}{{ service.imageservice}}" style="width: 100px;height: 100px" class="profile-user-img img-responsive">

            <h3 class="profile-username text-center">{{ service.libelleService }}</h3>


            <table class="table">
                <tr>
                    <td col-md-offset-4>{{ service.descriptionService }}</td>
                </tr>

            </table>
        </div>
        <!-- /.box-body -->
    </div>

{% endblock %}
