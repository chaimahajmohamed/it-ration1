{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    {% endblock %}
<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <a  class='btn btn-info btn-xs pull-right' href="{{  path('service_index') }}"><i class="glyphicon glyphicon-remove "></i></a><br>
            <h3 class="box-title text-info">Service à modifier</h3>
        </div>
        <div class="box-body">
            {{ form_start(edit_form,{'attr':{'novalidate':'novalidate'}})}}
            <!-- le champ Titre-->
            <!-- Ceci pour devenir le champ en rouge si le contenu est faux -->
            {% set class='' %}
            {% if not edit_form.libelleService.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
            <!-- -->
            <div class="form-group {{class}}">
                    {{ form_label(edit_form.libelleService,'Titre')}}
                    {{ form_widget(edit_form.libelleService,{'attr':{'class':'form-control'}}) }}
                <!-- ceci pour l'affichage d'un message d'erruer-->
                {% do edit_form.libelleService.setRendered %}
                {% if not edit_form.libelleService.vars.valid %}
                    {% for error in edit_form.libelleService.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif%}
                <!-- fin -->
            </div>
            <!-- -->
            <!-- le champ description-->
            <div class="form-group {{class}}">

                {% set class='' %}
                {% if not edit_form.descriptionService.vars.valid %}
                    {% set class="has-error" %}
                {% endif %}

                {{ form_label(edit_form.descriptionService,'Description')}}
                {{ form_widget(edit_form.descriptionService,{'attr':{'class':'form-control'}}) }}

                {% do edit_form.descriptionService.setRendered %}
                {% if not edit_form.descriptionService.vars.valid %}
                    {% for error in edit_form.descriptionService.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif%}
            </div>
            <div class="form-group {{class}}">

                {% set class='' %}
                {% if not edit_form.file.vars.valid %}
                    {% set class="has-error" %}
                {% endif %}

                {{ form_label(edit_form.file,'Image')}}
                {{ form_widget(edit_form.file,{'attr':{'class':'form-control'}}) }}

                {% do edit_form.file.setRendered %}
                {% if not edit_form.file.vars.valid %}
                    {% for error in edit_form.file.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif %}

            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-ok-sign"></span> Modification terminée</button>
            {{ form_end(edit_form) }}
        </div>

        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('template/bower_components/jquery/dist/jquery.min.js')}}"></script>
        <!-- Bootstrap 3.3.7 -->
        <script src="{{ asset('template/bower_components/bootstrap/dist/js/bootstrap.min.js')}}"></script>
        <!-- FastClick -->
        <script src="{{ asset('template/bower_components/fastclick/lib/fastclick.js')}}"></script>
        <!-- AdminLTE App -->
        <script src="{{ asset('template/dist/js/adminlte.min.js')}}"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="{{ asset('template/dist/js/demo.js')}}"></script>
    {% endblock %}

{% endblock %}
