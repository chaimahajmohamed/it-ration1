{% extends "base.html.twig" %}

{% block body %}

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Service à modifier</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            {{ form_label(edit_form.libelleService,'Titre')}}
            {{ form_widget(edit_form.libelleService,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(edit_form.libelleService) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.descriptionService,'Description')}}
            {{ form_widget(edit_form.descriptionService,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(edit_form.descriptionService) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.file,'Image')}}
            {{ form_widget(edit_form.file,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(edit_form.file) }}
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Modification terminée</button>
    </div>
    <!--{{ form_end(edit_form) }} -->

{% endblock %}
