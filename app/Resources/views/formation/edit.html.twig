{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    {% endblock %}

    <div class="col-md-6">
        <div class="box box-info">
            <div class="box-header with-border">
                <a  class='btn btn-info btn-xs pull-right' href="{{  path('formation_index') }}"><i class="glyphicon glyphicon-remove "></i></a><br>
                <h3 class="box-title text-info">Formation Ã  modifier</h3>
            </div>
            <div class="box-body">
                {{ form_start(edit_form,{'attr':{'novalidate':'novalidate'}})}}
                <!-- le champ Nom-->
                <!-- Ceci pour que le champ devienne en rouge si le contenu est faux -->
                {% set class='' %}
                {% if not edit_form.nomFormation.vars.valid %}
                    {% set class="has-error" %}
                {% endif %}
                <!-- -->
                <div class="form-group {{class}}">
                    {{ form_label(edit_form.nomFormation,'Nom')}}
                    {{ form_widget(edit_form.nomFormation,{'attr':{'class':'form-control'}}) }}
                    <!-- ceci pour l'affichage d'un message d'erreur-->
                    {% do edit_form.nomFormation.setRendered %}
                    {% if not edit_form.nomFormation.vars.valid %}
                        {% for error in edit_form.nomFormation.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif%}
                    <!-- fin -->
                </div>
                <!-- -->
                <!--/nom-->
                <!-- le champ description-->
                <div class="form-group {{class}}">

                    {% set class='' %}
                    {% if not edit_form.descriptionFormation.vars.valid %}
                        {% set class="has-error" %}
                    {% endif %}

                    {{ form_label(edit_form.descriptionFormation,'Description')}}
                    {{ form_widget(edit_form.descriptionFormation,{'attr':{'class':'form-control'}}) }}

                    {% do edit_form.descriptionFormation.setRendered %}
                    {% if not edit_form.descriptionFormation.vars.valid %}
                        {% for error in edit_form.descriptionFormation.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif%}
                </div>
                <!--/description-->
                <!--le champ image -->
                <div class="form-group {{class}}">

                    {% set class='' %}
                    {% if not edit_form.file.vars.valid %}
                        {% set class="has-error" %}
                    {% endif %}

                    {{ form_label(edit_form.file,'Image')}}
                    {{ form_widget(edit_form.file,{'attr':{'class':'form-control'}}) }}

                    {% do edit_form.file.setRendered %}
                    {% if not edit_form.file.vars.valid %}
                        {% for error in edit_form.file.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif %}

                </div>
                <!--/image-->
                <!-- le champ sous service -->
                <div class="form-group">

                    {{ form_label(edit_form.id_sous_service,'Sous service')}}
                    {{ form_widget(edit_form.id_sous_service,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(edit_form.id_sous_service) }}

                </div>
                <!--/sous service-->
            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-info btn-md"><span class="glyphicon glyphicon-ok-sign"></span> Modifier</button>
                {{ form_end(edit_form) }}
            </div>

        </div>
    </div>


{% endblock %}
