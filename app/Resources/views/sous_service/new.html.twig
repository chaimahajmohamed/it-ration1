{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}
{% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
{% endblock %}

<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title text-info">Ajouter Sous service</h3>
            <a  class='btn btn-primary btn-xs pull-right' href="{{ path('sous_service_index') }}"><i class="glyphicon glyphicon-remove "></i></a>
        </div>
        <div class="box-body">
            {{ form_start(form,{'attr':{'novalidate':'novalidate'}})}}
            <!-- le champ titre-->

            {% set class='' %}
            {% if not form.libellesous.vars.valid %}
                {% set class="has-error" %}
            {% endif %}

            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    <label class="control-label" for="{{form.libellesous.vars.id}}">Titre</label>
                    <input type="text" class="form-control" id="{{form.libellesous.vars.id}}" name="{{ form.libellesous.vars.full_name}}" value="{{ form.libellesous.vars.value}}" placeholder="Entrer le titre">

                    {% do form.libellesous.setRendered %}
                    {% if not form.libellesous.vars.valid %}
                        {% for error in form.libellesous.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif%}
                </div>
            </div>
            <!-- le champ description -->
            {% set class='' %}
            {% if not form.descriptionsous.vars.valid %}
                {% set class="has-error" %}
            {% endif %}

            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    <label class="control-label" for="{{form.descriptionsous.vars.id}}">Description</label>
                    <textarea type="text" rows="4" class="form-control" id="{{form.descriptionsous.vars.id}}" name="{{ form.descriptionsous.vars.full_name}}" placeholder="Entrer la description"></textarea>

                    {% do form.descriptionsous.setRendered %}
                    {% if not form.descriptionsous.vars.valid %}
                        {% for error in form.descriptionsous.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif%}
                </div>
            </div>
            <!-- le champ service -->
            {% set class='' %}
            {% if not form.descriptionsous.vars.valid %}
                {% set class="has-error" %}
            {% endif %}

            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    {{ form_label(form.service,'Service')}}
                    {{ form_widget(form.service,{'attr':{'class':'form-control'}}) }}

                    {% do form.service.setRendered %}
                    {% if not form.service.vars.valid %}
                        {% for error in form.service.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif%}
                </div>
            </div>

            <div class="box-footer">
                <input class="btn btn-primary btn-md" type="submit" value="Ajouter" />
                <a  class='btn btn-warning btn-md' href="{{ path('sous_service_index')  }}"> Annuler</a>
                {{ form_end(form) }}
            </div>

        </div>
    </div>

{% endblock %}
