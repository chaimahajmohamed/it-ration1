{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    {% endblock %}
<div class="col-md-6">
    <div class="box box-info">
        <div class="box-header with-border">
            <h1 class="box-title text-info">{{ sous_Service.libelleSous }}</h1>
         <div class="btn-group-vertical pull-right">
            <a  class="btn btn-info btn-xs pull-right" href="{{  path('sous_service_index') }}"><i class="glyphicon glyphicon-remove "></i></a>
            {{ form_start(delete_form) }}
            <button type="submit" value="Supprimer" class="btn btn-danger btn-xs pull-right"><i class="glyphicon glyphicon-trash"></i></button>
            {{ form_end(delete_form) }}
         </div>
        </div>
        <div class="box-body">
            {{ form_start(edit_form,{'attr':{'novalidate':'novalidate'}})}}
            <!-- le champ Titre-->
            <!-- Ceci pour devenir le champ en rouge si le contenu est faux -->
            {% set class='' %}
            {% if not edit_form.libelleSous.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
            <!-- -->
            <div class="form-group {{class}}">
                {{ form_label(edit_form.libelleSous,'Titre')}}
                {{ form_widget(edit_form.libelleSous,{'attr':{'class':'form-control'}}) }}
                <!-- ceci pour l'affichage d'un message d'erruer-->
                {% do edit_form.libelleSous.setRendered %}
                {% if not edit_form.libelleSous.vars.valid %}
                    {% for error in edit_form.libelleSous.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif%}
                <!-- fin -->
            </div>
            <!-- fin titre-->
            <!-- le champ description-->
            <div class="form-group {{class}}">

                {% set class='' %}
                {% if not edit_form.descriptionSous.vars.valid %}
                    {% set class="has-error" %}
                {% endif %}

                {{ form_label(edit_form.descriptionSous,'Description')}}
                {{ form_widget(edit_form.descriptionSous,{'attr':{'class':'form-control'}}) }}

                {% do edit_form.descriptionSous.setRendered %}
                {% if not edit_form.descriptionSous.vars.valid %}
                    {% for error in edit_form.descriptionSous.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif%}
            </div>
            <!-- le champ service -->
            {% set class='' %}
            {% if not edit_form.service.vars.valid %}
                {% set class="has-error" %}
            {% endif %}

            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    {{ form_label(edit_form.service,'Service')}}
                    {{ form_widget(edit_form.service,{'attr':{'class':'form-control'}}) }}

                    {% do edit_form.service.setRendered %}
                    {% if not edit_form.service.vars.valid %}
                        {% for error in edit_form.service.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif%}
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-ok-sign"></span> Modification termin√©e</button>
                {{ form_end(edit_form) }}
            </div>

        </div>
    </div>

</div>
{% endblock %}