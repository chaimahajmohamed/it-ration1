{% extends 'base.html.twig' %}
{% block body %}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <div class="container">
    <div class="row col-lg-12 ">
        <a class='btn btn-primary btn-md pull-right' href="{{ path('formateur_new') }}"><span class="glyphicon glyphicon-plus"></span> Ajouter Formateur</a>
    <div class="panel panel-info class ">
        <div class="panel-heading">
            Les Formateurs
        </div>
    <div class="panel-body">
    <div class="row">
    <div class="table-responsive">
    <table class="table table-bordered">
    <thead>
    <tr>
        <th>Photo</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Téléphone</th>
        <th>Description</th>
        <th>Cv</th>
        <th class="text-center"><em class="glyphicon glyphicon-cog"></em></th>
    </tr>
    </thead>
    <tbody>
<tr>
    {% for formateur in formateurs %}
        <tr class="ok">
            <td><img src="{{ asset('/images/')}}{{formateur.photoformateur}}" style="width: 100px;height: 100px"></td>
            <td>{{ formateur.nomFormateur }}</td>
            <td>{{ formateur.prenomFormateur }}</td>
            <td>{{ formateur.telFormateur }}</td>
            <td>{{ formateur.descriptionFormateur }}</td>
            <td>
                <a href="{{ asset('uploads/cvformateur/'~ formateur.cvformateur) }}" class="btn btn-success">Voir</a>
            </td>
            <td class="text-center">
                <a  class='btn btn-info btn-sm' href="{{ path('formateur_show', { 'id': formateur.id })  }}"><span class="glyphicon glyphicon-eye-open"></span> Afficher</a>
                <a class='btn btn-warning btn-sm' href="{{ path('formateur_edit', { 'id': formateur.id }) }}"><span class="glyphicon glyphicon-edit"></span> Modifier</a>
                <a class='btn btn-danger btn-sm' href="{{ path('formateur_delete', { 'id': formateur.id }) }}"><span class="glyphicon glyphicon-remove"></span> Supprimer</a>

            </td>
        </tr>
    {% endfor %}
        </tbody>
        </table>
        </div>
        </div>
        </div>
        </div>
        </div>

{% endblock %}