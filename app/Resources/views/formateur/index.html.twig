{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}
    {% block stylesheet %}
    <!------ Include the above in your HEAD tag ---------->
    <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css')}}">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css')}}">
    <!-- Ionicons -->
    <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css')}}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css')}}">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css')}}">
    {% endblock %}
        <div class="text-center">
        <a class='btn btn-primary btn-md center' href="{{ path('formateur_new') }}"><span class="glyphicon glyphicon-plus"></span> Ajouter Formateur</a>
        </div><br/>

    <div class="row">
    <div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Les Formateurs</h3>

            <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control pull-right" placeholder="Rechercher">
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>

                </div>

            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tr>
                    <th>Photo</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Téléphone</th>
                    <th>Description</th>
                    <th>Cv</th>
                    <th class="text-center"><em class="glyphicon glyphicon-cog"></em></th>
                </tr>
                    {% for formateur in formateurs %}
                <tr class="ok">
                    <td><img src="{{ asset('/images/')}}{{formateur.photoformateur}}" style="width: 100px;height: 100px"></td>
                    <td>{{ formateur.nomFormateur }}</td>
                    <td>{{ formateur.prenomFormateur }}</td>
                    <td>{{ formateur.telFormateur }}</td>
                    <td>{{ formateur.descriptionFormateur }}</td>
                    <td>

                        <a href="{{ asset('uploads/cvformateur/'~ formateur.cvformateur) }}" class="btn btn-default btn-sm">Consulter</a>
                    </td>
                    <td class="text-center">
                        <a  class='btn btn-info btn-sm' href="{{ path('formateur_show', { 'id': formateur.id })  }}"><span class="glyphicon glyphicon-eye-open"></span> Afficher</a>
                        <a class='btn btn-warning btn-sm' href="{{ path('formateur_edit', { 'id': formateur.id }) }}"><span class="glyphicon glyphicon-edit"></span> Modifier</a>
                        <!-- Trigger the modal with a button -->
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-remove"></span> Supprimer</button>
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <p><h3 style="color:#808080">Etes-vous sûr que vous voulez Supprimer {{ formateur.nomFormateur }} {{ formateur.prenomFormateur }}</h3></p>
                                    </div>
                                    <div class="modal-footer">
                                        <a class='btn btn-danger btn-sm' href="{{ path('formateur_delete', { 'id': formateur.id }) }}">Supprimer</a>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">{{ knp_pagination_render(formateurs) }}</div>
    </div>
    <!-- /.box -->

{% endblock %}