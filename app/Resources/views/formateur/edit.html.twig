{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    {% endblock %}
<div class="col-md-6">
 <div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title text-info">Modifier Formateur</h3>
        <a class='btn btn-info btn-xs pull-right' href="{{ path('formateur_index') }}"><i class="glyphicon glyphicon-remove "></i></a>
    </div>

    <div class="box-body">
        {{ form_start(edit_form,{'attr':{'novalidate':'novalidate'}})}}

        <!-- le champ nom-->
        {% set class='' %}
        {% if not edit_form.nomFormateur.vars.valid %}
            {% set class="has-error" %}
        {% endif %}

        <div class="form-group {{class}} row" >
            <div class="col-sm-10">
                <label class="control-label" for="{{edit_form.nomFormateur.vars.id}}">Nom</label>
                <input type="text" class="form-control" id="{{edit_form.nomFormateur.vars.id}}" name="{{ edit_form.nomFormateur.vars.full_name}}" value="{{ edit_form.nomFormateur.vars.value}}" placeholder="Entrer le nom" required>

                {% do edit_form.nomFormateur.setRendered %}
                {% if not edit_form.nomFormateur.vars.valid %}
                    {% for error in edit_form.nomFormateur.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif%}
            </div>
        </div>
        <!-- le champ prénom-->
        {% set class='' %}
        {% if not edit_form.prenomFormateur.vars.valid %}
            {% set class="has-error" %}
        {% endif %}
        <div class="form-group {{class}} row" >
            <div class="col-sm-10">
                <label class="control-label" for="{{edit_form.prenomFormateur.vars.id}}">Prénom</label>

                <input type="text" class="form-control" id="{{edit_form.prenomFormateur.vars.id}}" name="{{ edit_form.prenomFormateur.vars.full_name}}" value="{{ edit_form.prenomFormateur.vars.value}}" placeholder="Entrer le prénom">

                {% do edit_form.prenomFormateur.setRendered %}
                {% if not edit_form.prenomFormateur.vars.valid %}
                    {% for error in edit_form.prenomFormateur.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        <!-- le champ CIN-->
        {% set class='' %}
        {% if not edit_form.cINFormateur.vars.valid %}
            {% set class="has-error" %}
        {% endif %}
        <div class="form-group {{class}} row" >
            <div class="col-sm-10">
                <label class=" control-label" for="{{edit_form.cINFormateur.vars.id}}">CIN</label>

                <input type="text" class="form-control" id="{{edit_form.cINFormateur.vars.id}}" name="{{ edit_form.cINFormateur.vars.full_name}}" value="{{ edit_form.cINFormateur.vars.value}}" placeholder="Entrer le CIN">

                {% do edit_form.cINFormateur.setRendered %}
                {% if not edit_form.cINFormateur.vars.valid %}
                    {% for error in edit_form.cINFormateur.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <!-- le champ Email-->
        {% set class='' %}
        {% if not edit_form.emailFormateur.vars.valid %}
            {% set class="has-error" %}
        {% endif %}
        <div class="form-group {{class}} row" >
            <div class="col-sm-10">
                <label class=" control-label" for="{{edit_form.emailFormateur.vars.id}}">Email</label>

                <input type="text" class="form-control" id="{{edit_form.emailFormateur.vars.id}}" name="{{ edit_form.emailFormateur.vars.full_name}}" value="{{ edit_form.emailFormateur.vars.value}}" placeholder="p-email@email.com">

                {% do edit_form.emailFormateur.setRendered %}
                {% if not edit_form.emailFormateur.vars.valid %}
                    {% for error in edit_form.emailFormateur.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <!-- le champ Domaine d'expertise-->
        {% set class='' %}
        {% if not edit_form.descriptionFormateur.vars.valid %}
            {% set class="has-error" %}
        {% endif %}
        <div class="form-group {{class}} row" >
            <div class="col-sm-10">
                <label class="control-label" for="{{edit_form.descriptionFormateur.vars.id}}">Domaine d'expertise</label>
                <input type="text" class="form-control" id="{{edit_form.descriptionFormateur.vars.id}}" name="{{ edit_form.descriptionFormateur.vars.full_name}}" value="{{ edit_form.descriptionFormateur.vars.value}}" placeholder="Entrer le domaine d'expertise">
                {% do edit_form.descriptionFormateur.setRendered %}
                {% if not edit_form.descriptionFormateur.vars.valid %}
                    {% for error in edit_form.descriptionFormateur.vars.errors %}
                        <span class="help-block">{{ error.message }}</span>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    <div class="col-1-offset-0">
            <!-- le champ téléphone-->
            {% set class='' %}
            {% if not edit_form.telFormateur.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    <label class="control-label" for="{{edit_form.telFormateur.vars.id}}">Téléphone</label>
                    <input type="text" class="form-control" id="{{edit_form.telFormateur.vars.id}}" name="{{ edit_form.telFormateur.vars.full_name}}" value="{{ edit_form.telFormateur.vars.value}}" placeholder="+21600000000">
                    {% do edit_form.telFormateur.setRendered %}
                    {% if not edit_form.telFormateur.vars.valid %}
                        {% for error in edit_form.telFormateur.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <!-- le champ facebook-->
            {% set class='' %}
            {% if not edit_form.fbFormateur.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    <label class=" control-label" for="{{edit_form.fbFormateur.vars.id}}">Facebook</label>
                    <input type="text" class="form-control" id="{{edit_form.fbFormateur.vars.id}}" name="{{ edit_form.fbFormateur.vars.full_name}}" value="{{ edit_form.fbFormateur.vars.value}}" placeholder="https://facebook.com/utilisateur">
                    {% do edit_form.fbFormateur.setRendered %}
                    {% if not edit_form.fbFormateur.vars.valid %}
                        {% for error in edit_form.fbFormateur.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <!-- le champ linkedin-->
            {% set class='' %}
            {% if not edit_form.linkFormateur.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    <label class="control-label" for="{{edit_form.linkFormateur.vars.id}}">Linkedin</label>
                    <input type="text" class="form-control" id="{{edit_form.linkFormateur.vars.id}}" name="{{ edit_form.linkFormateur.vars.full_name}}" value="{{ edit_form.linkFormateur.vars.value}}" placeholder="https://linkedin.com/utilisateur">
                    {% do edit_form.linkFormateur.setRendered %}
                    {% if not edit_form.linkFormateur.vars.valid %}
                        {% for error in edit_form.linkFormateur.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <!-- le champ Image-->
            {% set class='' %}
            {% if not edit_form.file.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    <label class="control-label" for="{{edit_form.file.vars.id}}">Image</label>
                    <input type="file" class="form-control" id="{{edit_form.file.vars.id}}" name="{{ edit_form.file.vars.full_name}}" value="{{ edit_form.file.vars.value}}">
                    {% do edit_form.file.setRendered %}
                    {% if not edit_form.file.vars.valid %}
                        {% for error in edit_form.file.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <!-- le champ CV-->
            {% set class='' %}
            {% if not edit_form.cvformateur.vars.valid %}
                {% set class="has-error" %}
            {% endif %}
            <div class="form-group {{class}} row" >
                <div class="col-sm-10">
                    <label class="control-label" for="{{edit_form.cvformateur.vars.id}}">Pièce jointe</label>
                    <input type="file" class="form-control" id="{{edit_form.cvformateur.vars.id}}" name="{{ edit_form.cvformateur.vars.full_name}}" value="{{ edit_form.cvformateur.vars.value}}">
                    {% do edit_form.cvformateur.setRendered %}
                    {% if not edit_form.cvformateur.vars.valid %}
                        {% for error in edit_form.cvformateur.vars.errors %}
                            <span class="help-block">{{ error.message }}</span>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
    </div>

        <div class="box-footer">
            <input class="btn btn-primary btn-md" type="submit" value="Ajouter" />
            <a  class='btn btn-warning btn-md' href="{{ path('formateur_index')  }}"> Annuler</a>
            {{ form_end(edit_form) }}
        </div>
    </div>
 </div>
</div>
{% endblock %}