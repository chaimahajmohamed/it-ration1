{% extends "user/layoutadmin.html.twig" %}
{% block fos_user_content %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('template/bower_components/bootstrap/dist/css/bootstrap.min.css')}}">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="{{ asset('template/bower_components/font-awesome/css/font-awesome.min.css')}}">
        <!-- Ionicons -->
        <link rel="stylesheet" href="{{ asset('template/bower_components/Ionicons/css/ionicons.min.css')}}">
        <!-- Theme style -->
        <link rel="stylesheet" href="{{ asset('template/dist/css/AdminLTE.min.css')}}">
        <!-- AdminLTE Skins. Choose a skin from the css/skins
             folder instead of downloading all of them to reduce the load. -->
        <link rel="stylesheet" href="{{ asset('template/dist/css/skins/_all-skins.min.css')}}">
    {% endblock %}


    <div class="box box-primary">
        <div class="box-body box-profile">
            <div class="btn-group-vertical pull-right">
                 <a  class='btn btn-primary btn-sm text-center' href="{{  path('formateur_index') }}"><i class="glyphicon glyphicon-remove "></i></a><br>
                 <a  class='btn btn-warning btn-sm text-center' href="{{ path('formateur_edit', { 'id': formateur.id }) }}"><i class="glyphicon glyphicon-edit"></i></a><br>
                 {{ form_start(delete_form) }}
                 <button type="submit" value="Supprimer" class="btn btn-danger btn-sm pull-right"><i class="glyphicon glyphicon-trash"></i></button>
                 {{ form_end(delete_form) }}
            </div>
            <img src="{{ asset('/images/')}}{{formateur.photoformateur}}" style="width: 200px;height:200px" class="profile-user-img img-responsive img-circle">

            <h3 class="profile-username text-center">{{ formateur.prenomFormateur }} {{ formateur.nomFormateur }}</h3>

            <p class="text-muted text-center">{{ formateur.descriptionFormateur }}</p>
            <table class="table">
                <tr>
                    <td><b>CIN</b></td>
                    <td>{{ formateur.cINFormateur }}</td>
                </tr>
                <tr>
                    <td><b>Téléphone</b></td>
                    <td>{{ formateur.telFormateur }}</td>
                </tr>
                <tr>
                    <td><b>Email</b></td>
                    <td>{{ formateur.emailFormateur }}</td>
                </tr>
                <tr>
                    <td><b>CV</b></td>
                    <td><a  href="{{ asset('uploads/cvformateur/'~ formateur.cvformateur) }}">Consulter</a></td>
                </tr>
                <tr>
                    <td><b>Réseaux Sociaux</b></td>
                    <td><a class="btn btn-social-icon btn-facebook btn-xs " href="{{ formateur.fbFormateur }}"><i class="fa fa-facebook"></i></a>
                        <a class="btn btn-social-icon btn-linkedin btn-xs text-center" href="{{ formateur.linkFormateur }}"><i class="fa fa-linkedin"></i></a>
                    </td>
                </tr>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
{% endblock %}