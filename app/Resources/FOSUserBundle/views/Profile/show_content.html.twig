{% trans_default_domain 'FOSUserBundle' %}
<section class="content">
    <div class="row">
        <section class="content">

            <div class="row">
                <div class="col-md-4">

                    <!-- Profile Image -->
                    <div class="box box-primary">
                        <div class="box-body box-profile">
                            <img class="profile-user-img img-responsive img-circle" src={{ asset("template/dist/img/TD.png") }} alt="User profile picture">

                            <h3 class="profile-username text-center">{{ user.username }}</h3>

                            <p class="text-muted text-center">Administrateur</p>

                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>{{ 'profile.show.username'|trans }}</b> <a class="pull-right">{{ user.username }}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>{{ 'profile.show.email'|trans }}</b> <a class="pull-right">{{ user.email }}</a>
                                </li>

                            </ul>


                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- left column -->

            </div>
        </section>
    </div>
</section>