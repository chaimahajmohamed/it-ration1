{% trans_default_domain 'FOSUserBundle' %}
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Mes informations :</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <p><b>{{ 'profile.show.username'|trans }}: </b><br>{{ user.username }}</p>
                    </div>
                </div>
                <hr>
                <div class="box-body">
                    <div class="form-group">
                        <p><b>{{ 'profile.show.email'|trans }}: </b><br>{{ user.email }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>