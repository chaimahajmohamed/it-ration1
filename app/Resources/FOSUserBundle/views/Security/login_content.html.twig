{% trans_default_domain 'FOSUserBundle' %}
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href={{ asset("template/css/login.css") }}>

<body class="main">
<!-- Background de la page -->
<div class="login-screen"></div>
<!--/Background de la page -->

<div class="login-center">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login" id="card">
                <div class="front signin_form">
                    <br><br>
                    <p>Se connecter</p>
                    <div class="form-group">
                        <form action="{{ path("fos_user_security_check") }}" method="post" class="login-form" role="form" on>
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}

                            <div class="form-group">
                                <label for="Email" class="sr-only">{{ 'security.login.username'|trans }}</label>
                                <div class="input-group">
                                    <input type="email" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Entrer votre adresse email" />
                                                      <span class="input-group-addon">
                                                          <i class="glyphicon glyphicon-user"></i>
                                                      </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
                                <div class="input-group">

                                    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Entrer votre mot de passe" />
                                                      <span class="input-group-addon">
                                                          <i class="glyphicon glyphicon-lock"></i>
                                                      </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on">{{ 'security.login.remember_me'|trans }}</label>
                                </div>
                            </div>
                            <div class="form-group sign-btn">
                                <input type="submit" class="btn" value="{{ 'security.login.submit'|trans }}" />
                                <p><a href="{{ path('fos_user_resetting_request') }}" class="forgot">RÃ©initialiser votre mot de passe?</a></p>
                                <p><a href="{{ path('fos_user_registration_register') }}" class="forgot">Vous n'avez pas de compte?</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src={{ asset("template/css/login.js") }}></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-Flip/1.0.18/jquery.flip.js"></script>

</body>







